			<x:enumeration value="3" />
			<x:enumeration value="4" />
			<x:enumeration value="6" />
			<x:enumeration value="7" />
			<x:enumeration value="8" />
			<x:enumeration value="9" />
			<x:enumeration value="DD" />
			<x:enumeration value="IN" />
